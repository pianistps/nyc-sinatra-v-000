<form action="/figures/<%=@figure.id%>" method="post">
  <label>Name: </label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br></br>

  <label>Titles</label>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"<%='checked' if @figure.titles.include?(title) %>> <%=title.name%></input>
  <%end%><br></br>

  <label>Landmarks:</label>
  <%Landmark.all.each do |mark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=mark.id%>" value="<%=mark.id%>"<%='checked' if @figure.landmarks.include?(mark)%>> <%=mark.name%></input><br></br>
  <%end%>

  <label>Create a new Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark"><br></br>

  <label>Create a new Title:</label>
  <input type="text" name="title[name]" id="new_title"><br></br>

  <input type="submit" id="Edit Figure">
</form>
